{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "corner-ribbon.css"
      },
      {
        "type": "script",
        "src": "corner-ribbon.js"
      }
    ]
  },
  "options": {
    "properties": {
      "text": {
        "order": 1,
        "title": "Text",
        "type": "string",
        "placeholder": "Check this out!",
        "default": "Check this out!"
      },
      "href": {
        "order": 2,
        "title": "URL",
        "type": "string",
        "placeholder": "http://example.com",
        "description": "Optionally make the ribbon a clickable link."
      },
      "targetBlank": {
        "showIf": {
          "href": {
            "op": "!=",
            "value": ""
          }
        },
        "order": 3,
        "title": "Open link in new tab",
        "type": "boolean",
        "default": false
      },
      "color": {
        "order": 5,
        "title": "Text color",
        "type": "string",
        "format": "color",
        "placeholder": "#ffffff",
        "default": "#ffffff"
      },
      "backgroundColor": {
        "order": 6,
        "title": "Ribbon color",
        "type": "string",
        "format": "color",
        "placeholder": "#ee4433",
        "default": "#ee4433"
      },
      "position": {
        "order": 7,
        "title": "Position",
        "type": "string",
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right"
        ],
        "enumNames": {
          "top-left": "Top left corner",
          "top-right": "Top right corner",
          "bottom-left": "Bottom left corner",
          "bottom-right": "Bottom right corner"
        },
        "format": "radios",
        "default": "top-right"
      },
      "width": {
        "order": 8,
        "title": "Width",
        "type": "integer",
        "description": "Enter a value between <code class=\"inline\">100</code> and <code class=\"inline\">500</code>. (Unit is <code class=\"inline\">px</code>.)",
        "placeholder": 180,
        "default": 180
      },
      "fontSize": {
        "order": 9,
        "title": "Font size",
        "type": "string",
        "enum": [
          "small",
          "normal",
          "large",
          "huge"
        ],
        "enumNames": {
          "small": "Small",
          "normal": "Normal",
          "large": "Large",
          "huge": "Huge"
        },
        "default": "normal"
      }
    }
  }
}
